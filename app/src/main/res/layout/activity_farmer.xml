<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Title TextView -->
        <TextView
            android:id="@+id/textViewTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Farmer Details"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_marginBottom="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Add Data Button -->
        <Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Data"
            app:layout_constraintTop_toBottomOf="@id/textViewTitle"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Update Button -->
        <Button
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Update"
            app:layout_constraintTop_toBottomOf="@id/textViewTitle"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="144dp" />

        <!-- Form Section (Hidden by default) -->
        <LinearLayout
            android:id="@+id/formLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
        android:layout_marginTop="16dp">

        <!-- Name Field -->
        <TextView
            android:id="@+id/textViewName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name:"
            android:textSize="18sp" />
        <EditText
            android:id="@+id/editTextText"
            android:layout_height="wrap_content"
            android:hint="Enter name"
            android:layout_width="match_parent"/>

        <!-- Mobile Field -->
        <TextView
            android:id="@+id/textViewMobile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mobile Number:"
            android:textSize="18sp" />
        <EditText
            android:id="@+id/editTextPhone"
            android:layout_height="wrap_content"
            android:hint="Enter mobile number"
            android:inputType="phone"
            android:layout_width="match_parent"/>

        <!-- Email Field -->
        <TextView
            android:id="@+id/textViewEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email ID:"
            android:textSize="18sp" />
        <EditText
            android:id="@+id/editTextEmail"
            android:layout_height="wrap_content"
            android:hint="Enter Email ID"
            android:inputType="textEmailAddress"
            android:layout_width="match_parent"/>

        <!-- Acres Field -->
        <TextView
            android:id="@+id/textViewAcres"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Number of Acres:"
            android:textSize="18sp" />
        <EditText
            android:id="@+id/editTextNumber3"
            android:layout_height="wrap_content"
            android:hint="Enter number of acres"
            android:inputType="number"
            android:layout_width="match_parent"/>

        <!-- Aadhar Field -->
        <TextView
            android:id="@+id/textViewAcress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Aadhar Number:"
            android:textSize="18sp" />
        <EditText
            android:id="@+id/editTextNumber4"
            android:layout_height="wrap_content"
            android:hint="Enter Aadhar Number"
            android:inputType="number"
            android:layout_width="match_parent"/>

        <!-- Survey Field -->
        <TextView
            android:id="@+id/textViewSurvey"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Survey Number:"
            android:textSize="18sp" />
        <EditText
            android:id="@+id/editTextNumber5"
            android:layout_height="wrap_content"
            android:hint="Enter Survey Number"
            android:inputType="number"
            android:layout_width="match_parent"/>

        <!-- Address Field -->
        <TextView
            android:id="@+id/textViewAddresss"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Address:"
            android:textSize="18sp" />
        <EditText
            android:id="@+id/editTextNumber6"
            android:layout_height="wrap_content"
            android:hint="Enter Address"
            android:layout_width="match_parent"/>

        <!-- Submit Button -->
        <Button
            android:id="@+id/buttonSubmit"
            android:layout_height="wrap_content"
            android:text="Submit"
            android:layout_width="wrap_content"
            android:layout_marginTop="16dp"/>

    </LinearLayout>

    <!-- Farmers List Layout -->
    <LinearLayout
        android:id="@+id/farmerListLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/formLayout" />

</androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
